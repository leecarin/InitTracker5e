<h1 class="my-4 text-center">Initiative Tracker</h1>
<div class="container">
    <form action="/save" method="POST">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="charactersTable">
                <thead class="table-dark">
                    <tr>
                        <th>Initiative</th>
                        <th>Name</th>
                        <th>AC</th>
                        <th>Current HP</th>
                        <th>Maximum HP</th>
                        <th>Damage Taken</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each characters}}
                    <tr>
                        <td><input type="number" name="init-{{@index}}" value="{{this.init}}" class="form-control" /></td>
                        <td><input type="text" name="name-{{@index}}" value="{{this.name}}" class="form-control" /></td>
                        <td><input type="number" name="ac-{{@index}}" value="{{this.ac}}" class="form-control" /></td>
                        <td><input type="number" name="current_hp-{{@index}}" value="{{this.current_hp}}" class="form-control" /></td>
                        <td><input type="number" name="max_hp-{{@index}}" value="{{this.max_hp}}" class="form-control" /></td>
                        <td><input type="number" name="dmg-{{@index}}" class="form-control damage-taken" /></td>
                        <td><button type="button" class="btn btn-secondary btn-sm remove-row">Remove</button></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <button type="button" class="btn btn-success mt-3" id="addRow">Add Row</button>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Save</button>
    </form>
</div>

<script src="/js/app.js"></script>
